<div class="form-container">
  <div class="form">
    <h2 class="title">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"subtitle" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-form" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"subtitle" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"text-form" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field ml-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="text-center py-4">
        <%= f.submit "ログイン", class:"login_button" %>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
